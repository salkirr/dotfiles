[core]
	quotepath = off
[diff]
    tool = difftastic
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[pager]
    difftool = true
[alias]
    dft = difftool

[includeIf "gitdir:~/projects/"]
    path = ~/projects/.gitconfig
[includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig
